<nav>
        <div class = "container ">

            
            <div class='nav_container'>
                <%= link_to 'Truth Feed', root_path , class: 'nav_logo' %>

                <ul class ="nav_items">

                    <div class='search_bar'>
                        <%= form_tag(posts_path, method: :get) do %>
                                
                            <div class="search_bar-container">
                                
                                <%= image_submit_tag("search.svg", alt: "Search" , class: 'search_bar-button', tabindex: '-1') %>
                                <%= text_field_tag :search, params[:search], placeholder: "Search", class: 'input_bar' %>
                                
                            </div>
                        <% end %>
                    </div>
                
                    <li><%= link_to 'Contact', pages_contact_path %></li>
                    <li><%= link_to 'About', pages_about_path %></li>

                    <li class ="nav_items">                       
                                                
                        <% if user_signed_in? %>
                          
                                <button id="toggleOpenButton" class="avatar">
                                    <%= image_tag(rails_blob_path(current_user.profile_picture), alt: "profile", id: 'avatar')%>
                                </button>
    
                        <%else%>
                            <div>
                            <%= link_to 'Sign Up', new_user_registration_path, class: 'button' %>
                            <%= link_to 'Sign In', user_session_path, class: 'button' %>
                            </div>
                        <%end%>

                    </li>

                </ul>
                
            </div>

            <div class='nav_container'>
                <!--move evrthing in  this div to an other file if active bar needs to be shown-->
                <ul class ="nav_items nav_bar-secondary">
                    <li><%= link_to 'Home', root_path %></li>
                    <li><%= link_to 'All Posts', posts_path %></li>
                    <div class='spacing_bar'></div>
                    <li><%= link_to 'local', posts_path(query: 'local') %></li>
                    <li><%= link_to 'India', posts_path(loc: 'India') %></li>
                    <li><%= link_to 'World', posts_path(loc: 'World') %></li>
                    <li><%= link_to 'sports', posts_path(category: 'sports') %></li>

                </ul>
                
            </div>          

        </div>

</nav>

<% if user_signed_in? %>
    
    <div id="iframeContainer" style="display: none;">

        <button id="toggleCloseButton">
            <%=image_tag("close.png", alt: "close" , class: 'close-button')%>
        </button>

        <%= render "partials/quickMenu"%>

    </div>
    
<%end%>

<div class='section_extra-margin'></div>