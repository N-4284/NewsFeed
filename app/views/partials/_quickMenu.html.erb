
<ul class='dashboard_list'>
       
        <li>
                <button class ="profile_avatar", onclick= "window.parent.location.href = '<%=edit_user_registration_path%>'">
                        <%= image_tag(rails_blob_path(current_user.profile_picture), alt: "profile")%>
                </button>
        </li>
        
        <div>
                <%= link_to 'Dashboard', dashboard_path,class: "button" %>
        </div>
        
        <% if current_user&.has_role?(:admin) || current_user&.has_role?(:moderator) %>
                <div>
                        <% if current_user&.has_role?(:admin)%>
                                <%= link_to 'Manage Accounts', admin_path,class: "button" %>
                        <%end%>
                        <%= link_to 'Manage Posts', moderator_path,class: "button"%>
                </div>
        <% end %>
        
        <div class='logout_pos'>
            <%= link_to 'Logout', destroy_user_session_path,class: "button danger", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>     
        </div>       
</ul>