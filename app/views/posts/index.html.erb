<p style="color: green"><%= notice %></p>



<div id="posts">
  <% @posts.includes(:author, :category, :location).each do |post| %>
    <%= render partial: 'post', locals: { post: post } %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
