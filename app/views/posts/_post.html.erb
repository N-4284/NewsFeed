<div id="<%= dom_id post %>">
  <p>
    <strong>Author:</strong>
    <%= post.author&.username.presence || "[Deleted Account]" %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Thumbnail:</strong>    
      <%= image_tag rails_blob_path(post.thumbnail), class: "thumbnail" %>
    <!--%= post.thumbnail %-->
  </p>

  <p>
    <strong>Category:</strong>
    <%= post.category.title %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= post.location.title %>
  </p>

</div>
